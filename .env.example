# AI-Powered Video Analysis System Environment Variables

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Configuration (optional, for fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
DEBUG=false
API_HOST=127.0.0.1
API_PORT=8000

# Directory Configuration
UPLOAD_DIR=uploads
STORAGE_DIR=storage
TEMP_DIR=temp

# Database Configuration
DATABASE_URL=sqlite:///./video_analysis.db
CHROMADB_PATH=./data/chromadb
VECTOR_DB_COLLECTION=video_embeddings
VECTOR_DB_COLLECTION=video_embeddings

# File Configuration
MAX_FILE_SIZE=524288000  # 500MB in bytes
MAX_VIDEO_SIZE_MB=500
ALLOWED_EXTENSIONS=.mp4,.mov,.avi,.mkv,.webm

# Video Processing Configuration
CHUNK_DURATION_SECONDS=30
FRAME_SAMPLE_RATE=1
MAX_CONCURRENT_PROCESSES=4
DOWNLOAD_YOUTUBE_VIDEOS=false  # Set to true to download videos for frame analysis

# Text Processing Configuration
TEXT_CHUNK_SIZE=1000
TEXT_CHUNK_OVERLAP=200

# AI Model Configuration
GEMINI_TEXT_MODEL=gemini-1.5-pro
GEMINI_VISION_MODEL=gemini-1.5-pro-vision
GEMINI_EMBEDDING_MODEL=models/text-embedding-004
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# YouTube Configuration
YOUTUBE_QUALITY=best[height<=720]
YOUTUBE_FORMAT=mp4

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000
